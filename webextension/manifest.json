{
    "applications": {
        "gecko": {
            "id": "bookmarkdial@sblask",
            "strict_min_version": "55.0"
        }
    },
    "author": "Sebastian Blask",
    "background": {
        "scripts": [
            "browser-polyfill.js",
            "background.js"
        ]
    },
    "browser_action": {
        "browser_style": false,
        "default_icon": "icon.svg",
        "default_popup": "options/options.html",
        "default_title": "Bookmark Dial"
    },
    "chrome_settings_overrides": {
        "homepage": "bookmark-dial.html"
    },
    "chrome_url_overrides": {
        "newtab": "bookmark-dial.html"
    },
    "description": "Display the contents of a bookmark folder as thumbnails with title every time the user opens a new tab.",
    "homepage_url": "https://github.com/sblask/firefox-bookmark-dial/",
    "manifest_version": 2,
    "name": "Bookmark Dial",
    "options_ui": {
        "page": "options/options.html"
    },
    "version": "2.0.0"
}
