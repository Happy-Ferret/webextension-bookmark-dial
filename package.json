{
    "title": "Bookmark Dial",
    "name": "bookmarkdial",
    "id": "bookmarkdial@sblask",
    "version": "1.1.0",
    "description": "Display the contents of a bookmark folder as thumbnails with title everytime the user opens a new tab.",
    "main": "index.js",
    "author": "Sebastian Blask",
    "engines": {
        "firefox": ">=41.0a1",
        "fennec": ">=41.0a1"
    },
    "license": "MIT",
    "scripts": {
        "help": "jpm --help",
        "lint": "eslint index.js lib data test && jscs index.js lib data test",
        "start": "jpm --binary firefox-trunk run",
        "start:stable": "jpm --binary /usr/bin/firefox run",
        "start:stable:profile": "jpm --no-copy --profile /home/sebastian/Desktop/profile --binary /usr/bin/firefox run",
        "test": "jpm --binary firefox-trunk test",
        "test:stable": "jpm --binary /usr/bin/firefox test",
        "test:travis": "jpm --binary /usr/local/bin/firefox test",
        "xpi": "jpm xpi"
    },
    "devDependencies": {
        "eslint": "1.10.x",
        "jpm": "1.0.x",
        "jscs": "2.6.x"
    },
    "keywords": [
        "bookmarks",
        "contextmenu",
        "fast dial",
        "fastdial",
        "homepage",
        "jetpack",
        "new tab",
        "newtab",
        "open tab",
        "opera",
        "speed dial",
        "speeddial",
        "thumbnails",
        "visual"
    ],
    "icon": "resource://bookmarkdial-at-sblask/data/icon.svg",
    "homepage": "https://addons.mozilla.org/firefox/addon/bookmark-dial/",
    "repository": {
        "type": "git",
        "url": "https://github.com/sblask/firefox-bookmark-dial"
    },
    "permissions": {
        "private-browsing": true
    },
    "preferences-branch": "bookmarkdial",
    "preferences": [
        {
            "type": "string",
            "name": "bookmarkFolder",
            "title": "The folder to show in Bookmark Dial",
            "value": "/UNSORTED/",
            "hidden": true
        },
        {
            "type": "control",
            "name": "bookmarkFolderChooser",
            "label": "Choose",
            "title": "Folder for Bookmark Dial"
        },
        {
            "type": "bool",
            "name": "replaceHomepage",
            "title": "Use Bookmark Dial instead of default homepage",
            "value": true
        },
        {
            "type": "bool",
            "name": "useEditDialogForSavesFromPage",
            "title": "Use dialog for Add Link and Add Page instead of creating a bookmark directly",
            "value": true
        },
        {
            "type": "menulist",
            "name": "numberOfColumns",
            "title": "Number of colums",
            "options": [
                {
                    "value": "auto",
                    "label": "Auto"
                },
                {
                    "value": "1",
                    "label": "1"
                },
                {
                    "value": "2",
                    "label": "2"
                },
                {
                    "value": "3",
                    "label": "3"
                },
                {
                    "value": "4",
                    "label": "4"
                },
                {
                    "value": "5",
                    "label": "5"
                },
                {
                    "value": "6",
                    "label": "6"
                },
                {
                    "value": "7",
                    "label": "7"
                },
                {
                    "value": "8",
                    "label": "8"
                },
                {
                    "value": "9",
                    "label": "9"
                },
                {
                    "value": "10",
                    "label": "10"
                }
            ]
        },
        {
            "type": "file",
            "name": "backgroundImage",
            "title": "Image to use as background"
        },
        {
            "type": "control",
            "name": "resetBackgroundImage",
            "label": "Clear chosen background image",
            "title": " "
        },
        {
            "type": "bool",
            "name": "scaleBackgroundToFit",
            "title": "Scale background image to fit browser window",
            "value": true
        },
        {
            "type": "file",
            "name": "customStyleFile",
            "title": "A custom CSS file for Bookmark Dial"
        },
        {
            "type": "control",
            "name": "resetCustomStyleFile",
            "label": "Clear custom CSS file and use the default one",
            "title": " "
        }
    ],
    "unpack": true
}
